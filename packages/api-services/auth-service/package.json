{
  "name": "@yggdrasil/auth-service",
  "version": "1.0.0",
  "description": "Authentication and authorization service for Yggdrasil platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config src/index.ts",
    "test:start": "ts-node --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:functional": "jest --testPathPattern=functional",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@yggdrasil/database-schemas": "file:../../database-schemas",
    "@yggdrasil/shared-utilities": "file:../../shared-utilities",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "displayName": "auth-service",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/test-setup.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 30,
        "branches": 10,
        "functions": 30,
        "lines": 30
      },
      "./src/controllers/*.ts": {
        "statements": 70,
        "branches": 50,
        "functions": 70,
        "lines": 70
      },
      "./src/services/*.ts": {
        "statements": 60,
        "branches": 40,
        "functions": 60,
        "lines": 60
      }
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "html",
      "json-summary"
    ],
    "verbose": true,
    "testTimeout": 30000,
    "clearMocks": true,
    "transformIgnorePatterns": [
      "node_modules/(?!(p-queue|eventemitter3|mongodb|bson)/)"
    ],
    "moduleNameMapper": {
      "^p-queue$": "<rootDir>/__tests__/__mocks__/p-queue.js"
    }
  }
}
