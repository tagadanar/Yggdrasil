{
  "name": "@yggdrasil/shared-utilities",
  "version": "1.0.0",
  "description": "Shared utilities and types for Yggdrasil platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsd"
  },
  "files": [
    "dist",
    "testing.ts"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./client": "./dist/client.js",
    "./testing": "./testing.ts",
    "./openapi/setup-swagger": "./dist/openapi/setup-swagger.js",
    "./logging": "./dist/logging/logger.js",
    "./config": "./dist/config/env-validator.js",
    "./jwt": "./dist/helpers/jwt.js",
    "./middleware": "./dist/middleware/auth.js",
    "./security": "./dist/helpers/security-logger.js"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-jaeger": "^1.25.1",
    "@opentelemetry/instrumentation": "^0.52.1",
    "@opentelemetry/instrumentation-express": "^0.41.1",
    "@opentelemetry/instrumentation-http": "^0.52.1",
    "@opentelemetry/instrumentation-mongodb": "^0.46.0",
    "@opentelemetry/resources": "^1.25.1",
    "@opentelemetry/sdk-trace-base": "^1.25.1",
    "@opentelemetry/sdk-trace-node": "^1.25.1",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "@types/amqplib": "^0.10.7",
    "@types/consul": "^0.40.3",
    "@types/ioredis": "^4.28.10",
    "@types/ip": "^1.1.3",
    "amqplib": "^0.10.8",
    "consul": "^2.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "ip": "^2.0.1",
    "jsonwebtoken": "^9.0.2",
    "opossum": "^9.0.0",
    "p-queue": "^8.1.0",
    "prom-client": "^15.1.2",
    "redis": "^4.7.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-cloudwatch": "^6.3.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-elasticsearch": "^0.19.0",
    "winston-transport": "^4.9.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/opossum": "^8.1.9",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.4.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "jest": "^29.7.0",
    "openapi-types": "^12.1.3",
    "ts-jest": "^29.1.1",
    "tsd": "^0.32.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "moduleNameMapper": {
      "^p-queue$": "<rootDir>/__tests__/__mocks__/p-queue.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(p-queue|eventemitter3)/)"
    ]
  }
}
