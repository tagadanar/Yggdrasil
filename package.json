{
  "name": "@yggdrasil/platform",
  "version": "1.0.0",
  "description": "Yggdrasil Educational Platform - Modern IT school management system",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/api-services/*"
  ],
  "scripts": {
    "dev": "node scripts/kill-ports.js 3000 3001 3002 3003 3004 3005 && concurrently \"npm run dev:frontend:raw\" \"npm run dev:services:raw\"",
    "dev:frontend": "node scripts/kill-ports.js 3000 && npm run dev:frontend:raw",
    "dev:services": "node scripts/kill-ports.js 3001 3002 && npm run dev:services:raw",
    "dev:clean": "node scripts/kill-ports.js && npm run dev",
    "dev:status": "node scripts/dev-server.js status",
    "dev:frontend:raw": "npm run dev --workspace=@yggdrasil/frontend",
    "dev:services:raw": "concurrently \"npm run dev --workspace=@yggdrasil/auth-service\" \"npm run dev --workspace=@yggdrasil/user-service\"",
    
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=@yggdrasil/frontend",
    "build:services": "npm run build --workspaces --workspace=packages/api-services/*",
    
    "test": "npm run test --workspaces --if-present",
    "test:summary": "npm run test --workspaces --if-present -- --verbose=false --silent",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:functional": "npm run test:functional --workspace=@yggdrasil/testing-utilities",
    "test:functional:ui": "npm run test:ui --workspace=@yggdrasil/testing-utilities",
    "test:functional:headed": "npm run test:headed --workspace=@yggdrasil/testing-utilities",
    "test:functional:debug": "npm run test:debug --workspace=@yggdrasil/testing-utilities", 
    "test:functional:start": "node scripts/test-server.js start",
    "test:functional:clean": "node scripts/test-server.js clean",
    "test:watch": "npm run test:watch --workspaces --if-present",
    
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    
    "setup:db": "npm run setup:db --workspace=@yggdrasil/database-schemas",
    "migrate": "npm run migrate --workspace=@yggdrasil/database-schemas",
    "seed": "npm run seed --workspace=@yggdrasil/database-schemas",
    
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "reset": "npm run clean && npm install",
    
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "education",
    "platform",
    "typescript",
    "microservices",
    "nextjs",
    "mongodb"
  ],
  "author": "Yggdrasil Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yggdrasil/platform.git"
  }
}